<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FindMe.Views.Options">
  <StackLayout>
    <Label Text="Nom d'utilisateur:"/>
      <Entry Text="{Binding Username}" />
    <Label Text="Mode Difficile:"/>
      <Switch IsToggled="{Binding HardGame}" ></Switch>
    <Label Text="Nombre d'icone:"/>
      <Picker SelectedIndex="{Binding NbIconesIndex}" HorizontalOptions="FillAndExpand" x:Name="nbIcones">
        <Picker.Items>
          <x:String>3</x:String>
          <x:String>5</x:String>
          <x:String>7</x:String>
        </Picker.Items>
      </Picker>
    <Label Text="Son:"/>
      <Switch IsToggled="{Binding Sound}" ></Switch>
    <Label x:Name="lVib" Text="Vibreur:"/>
      <Switch x:Name="sVib" IsToggled="{Binding Vibration}" ></Switch>
  </StackLayout>
</ContentPage>